<p>タイトル<%= @question.title %></p>
<p>質問内容<%= @question.body %></p>
<p>質問者<%= @question.user.name %></p>
<% if @question.solved? %>
    <p>解決済み</p>
<% else %>
    <% if @question.user_id == current_user.id %>
        <%= button_to '解決済みにする', solve_question_path(@question), method: :post %>
    <% end %>
<% end %>




<h2>回答一覧</h2>
  <ul>
    <%= form_with model: [@question, @answer || Answer.new]  do |f| %>
      <li>
        <%= f.label :body %>
        <%= f.text_area :body %>
        <%= f.submit '回答する' %>
      </li>
    <% end %>
  </ul>

<% @question.answers.each do |answer| %>
  <%= answer.body %>
  <% if current_user.id == answer.user_id %>
    <%= button_to '削除', question_answer_path(@question,answer), method: :delete  %>
    <% if @question.solved? == false %>
    <%= link_to '編集',  edit_question_answer_path(@question,answer) %>
    <% end %>
    <% if answer.edited == true %>
      <p style="color: red">編集済み</p>
    <% end %>
  <% end %>
<% end %>